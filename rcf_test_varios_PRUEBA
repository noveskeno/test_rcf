    <div class="actions">
      <div class="bar">
        <div class="score">Puntuación: <span id="score">—</span></div>
        <div>
          <button onclick="grade()">Calificar</button>
          <button class="secondary" onclick="resetQuiz()">Reiniciar</button>
          <button class="secondary" onclick="toggleAnswers(this)">Mostrar respuestas</button>
        </div>
      </div>
    </div>
    <div class="footer">Generado automáticamente · Modo offline · Respuestas según la hoja oficial incluida en el PDF</div>
  </div>
<script>
const ANSWERS = {"1": "C", "2": "B", "3": "B", "4": "D", "5": "C", "6": "A", "7": "B", "8": "D", "9": "B", "10": "B", "11": "A", "12": "D", "13": "A", "14": "D", "15": "B", "16": "C", "17": "D", "18": "A", "19": "D", "20": "B", "21": "C", "22": "C", "23": "B", "24": "A", "25": "A", "26": "D", "27": "D", "28": "B", "29": "A", "30": "C", "31": "D", "32": "B", "33": "C", "34": "C", "35": "D", "36": "A", "37": "D", "38": "B", "39": "A", "40": "B", "41": "C", "42": "A", "43": "D", "44": "D", "45": "A", "46": "A", "47": "B", "48": "C", "49": "D", "50": "C"}; // map q->letter

let answersVisible = false;

function grade(){
  let total = 0, right = 0;
  document.querySelectorAll('.question').forEach(q =>{
    total++;
    const qid = q.dataset.qid;
    const chosen = q.querySelector('input[type=radio]:checked');
    const correct = ANSWERS[qid];
    q.querySelectorAll('.option').forEach(o=>o.classList.remove('correct','incorrect'));
    if(chosen){
      const letter = chosen.value;
      if(letter === correct){
        right++;
        chosen.closest('.option').classList.add('correct');
        q.querySelector('.feedback').textContent = '✔ Correcta';
        q.querySelector('.feedback').style.color = '#21c17a';
      } else {
        chosen.closest('.option').classList.add('incorrect');
        q.querySelector('.feedback').innerHTML = '✖ Incorrecta · Correcta: <b>'+correct+'</b>';
        q.querySelector('.feedback').style.color = '#ff8ba1';
        const corr = q.querySelector('input[value="'+correct+'"]');
        if(corr) corr.closest('.option').classList.add('correct');
      }
    } else {
      q.querySelector('.feedback').textContent = 'Sin respuesta';
      q.querySelector('.feedback').style.color = '#ffc107';
    }
  });
  const pct = Math.round((right/total)*100);
  document.getElementById('score').textContent = `${right} / ${total} (${pct}%)`;
}

function resetQuiz(){
  document.querySelectorAll('input[type=radio]').forEach(r=> r.checked=false);
  document.querySelectorAll('.option').forEach(o=>o.classList.remove('correct','incorrect'));
  document.querySelectorAll('.feedback').forEach(f=>{f.textContent=''; f.removeAttribute('style')});
  document.getElementById('score').textContent = '—';
}

function toggleAnswers(btn){
  answersVisible = !answersVisible;
  document.body.classList.toggle('show-answers', answersVisible);
  btn.textContent = answersVisible ? 'Ocultar respuestas' : 'Mostrar respuestas';
  // Marcar visualmente la opción correcta cuando están visibles (sin afectar respuestas del usuario)
  document.querySelectorAll('.question').forEach(q =>{
    const correct = ANSWERS[q.dataset.qid];
    q.querySelectorAll('.option').forEach(o=>o.classList.remove('correct'));
    if(answersVisible){
      const corr = q.querySelector('input[value="'+correct+'"]');
      if(corr) corr.closest('.option').classList.add('correct');
    }
  });
}
</script>
</body>
</html>